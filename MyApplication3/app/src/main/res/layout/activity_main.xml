<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="30dp">

        <TextView
            android:id="@+id/hptxt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="25000/25000"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/money"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="5dp"
            android:text="머니 : 0"
            android:textSize="20sp" />
    </RelativeLayout>

    <ImageButton
        android:id="@+id/riverstone"
        android:src="@drawable/mon"
        android:layout_width="match_parent"
        android:layout_height="300dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="39dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/da1"

            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:text="공격력+200            가격 100원"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/da2"
            android:layout_width="130dp"
            android:layout_height="match_parent"
            android:text="공격력+300                가격 200원" />

        <TextView
            android:id="@+id/ad3"
            android:layout_width="130dp"
            android:layout_height="match_parent"
            android:text="공격력+400                 가격 300원" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <Button
            android:id="@+id/buyBtn"
            android:enabled="false"
            android:text="구매"

            android:layout_width="130dp"
            android:layout_height="match_parent" />
        <Button
            android:id="@+id/buyBtn2"
            android:enabled="false"
            android:text="구매"

            android:layout_width="130dp"
            android:layout_height="match_parent" />
        <Button
            android:id="@+id/buyBtn3"
            android:enabled="false"
            android:text="구매"

            android:layout_width="130dp"
            android:layout_height="match_parent" />


    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="horizontal"
        >
        <ImageButton
            android:enabled="false"
            android:src="@drawable/mang"
            android:id="@+id/item1"
            android:layout_width="130dp"
            android:layout_height="100dp" />

        <ImageButton
            android:id="@+id/item2"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            app:srcCompat="@drawable/gun" />

        <ImageButton
            android:id="@+id/item3"
            android:layout_width="130dp"
            android:layout_height="100dp"
            android:enabled="false"
            android:src="@drawable/sword" />
    </LinearLayout>
    <RelativeLayout
        android:gravity="right"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <Button
            android:enabled="false"
            android:id="@+id/next"
            android:text="다음으로"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />
    </RelativeLayout>

</LinearLayout>